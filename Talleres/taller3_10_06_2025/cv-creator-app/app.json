{
  "expo": {
    "name": "cv-creator-app",
    "slug": "cv-creator-app",
    "scheme": "cvcreator",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light", 
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#3498db"
    },
    "assetBundlePatterns": [  
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fronsa.cvcreatorapp",
      "infoPlist": {
        "NSCameraUsageDescription": "Esta app necesita acceso a la cámara para tomar tu foto de perfil.",
        "NSPhotoLibraryUsageDescription": "Esta app necesita acceso a tu galería para seleccionar tu foto de perfil."
      }
    },
    "android": {
      "package": "com.fronsa.cvcreatorapp",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.RECORD_AUDIO"
      ],
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      },
      "plugins": [
        [
          "expo-image-picker",
          {
            "photosPermission": "La app necesita acceso a tus fotos para seleccionar tu foto de perfil."
          }
        ]
      ]
    }
  }
}